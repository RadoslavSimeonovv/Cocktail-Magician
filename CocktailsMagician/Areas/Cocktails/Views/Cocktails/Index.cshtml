@foreach (var cocktail in Model)
{

    <div class="container">
        <div class="row">
            <div class="col">
                <img src="~/Images/cocktail.jpg" width="250" height="250" />
                <center>
                    <div class="row">
                        @if (cocktail.AvgRating == 0)
                        {
                            <p class="text-secondary">Not rated</p>
                        }
                        else
                        {
                            @for (int i = 0; i < (int)cocktail.AvgRating; i++)
                            {
                                <span class="fa fa-star checked"></span>
                            }
                            @for (int i = (int)cocktail.AvgRating; i < 5; i++)
                            {
                                <span class="fa fa-star"></span>
                            }
                        }
                    </div>
                </center>
            </div>
            <div class="col">
                <h3> @cocktail.Name </h3>
                <div class="row"> @cocktail.Description</div>
                <div class="row">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@cocktail.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@cocktail.Id" class="btn btn-danger">Delete</a>
                    }
                    <a asp-action="Details" asp-route-id="@cocktail.Id" class="btn btn-success">Details</a>
                </div>
            </div>

        </div>
    </div>

    <br />

}


<center>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</center>
